@page
@model CRUD_Razor.Pages.CreateModel
@{
}

<form method="post">
    <div class="border pt-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Student</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Student.FName"></label>
            <input asp-for="Student.FName" class="form-control" />
            <span asp-validation-for="Student.FName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Student.LName"></label>
            <input asp-for="Student.LName" class="form-control" />
            <span asp-validation-for="Student.LName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Student.Gpa"></label>
            <input asp-for="Student.Gpa" class="form-control" />
            <span asp-validation-for="Student.Gpa" class="text-danger"></span>

        </div>
        <div class="row">
            <div class="col-6"><button type="submit" class="btn btn-primary">Create</button></div>
            <div class="col-6 text-end"><a asp-page="/Index" class=" btn btn-secondary">Back to List</a></div>
        </div>


    </div>
</form>
